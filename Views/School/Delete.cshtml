@model UniversityApplicationSystem.Models.ViewModels.SchoolViewModel

@{
    ViewData["Title"] = "Delete School";
}

<h2>Delete School</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this school?</h4>
    <p>This action cannot be undone.</p>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.School!.SchoolName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.School!.SchoolName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.School!.Email)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.School!.Email)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.School!.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.School!.Description)</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="School!.SchoolID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>