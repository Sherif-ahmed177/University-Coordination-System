@model UniversityApplicationSystem.Models.ViewModels.MajorViewModel

@{
    ViewData["Title"] = "Add Major to " + Model.SchoolName;
}

<div class="container mt-4">
    <h2>Add Major to @Model.SchoolName</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="AddMajor">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SchoolID" />
                <input type="hidden" asp-for="SchoolName" />

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Major Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Capacity" class="control-label">Capacity</label>
                    <input asp-for="Capacity" class="form-control" type="number" min="1" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DurationYears" class="control-label">Duration (Years)</label>
                    <input asp-for="DurationYears" class="form-control" type="number" min="1" max="6" />
                    <span asp-validation-for="DurationYears" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add Major</button>
                    <a asp-action="Details" asp-route-id="@Model.SchoolID" class="btn btn-secondary">Back to School</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 