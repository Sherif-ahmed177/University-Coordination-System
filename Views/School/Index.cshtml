@model UniversityApplicationSystem.Models.ViewModels.SchoolViewModel

@{
    ViewData["Title"] = "Schools";
}

<h2>Schools</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

@if (Model.Schools != null && Model.Schools.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.School!.SchoolName)</th>
                <th>@Html.DisplayNameFor(model => model.School!.Email)</th>
                <th>@Html.DisplayNameFor(model => model.School!.Description)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Schools)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.SchoolName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.SchoolID" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.SchoolID" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.SchoolID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No schools found.</p>
} 