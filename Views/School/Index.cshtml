@model IEnumerable<UniversityApplicationSystem.Models.School>

@{
    ViewData["Title"] = "Schools";
}

<div class="container-fluid">
    <h2>Schools</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Description</th>
                    <th>Total Scales</th>
                    <th>Min Required Grade</th>
                    <th>Established Year</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SchoolID</td>
                        <td>@item.SchoolName</td>
                        <td>@item.Email</td>
                        <td>@(item.Description?.Length > 50 ? item.Description.Substring(0, 47) + "..." : item.Description)</td>
                        <td>@item.TotalScales</td>
                        <td>@item.MinRequiredGrade</td>
                        <td>@item.EstablishedYear</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.SchoolID" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.SchoolID" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.SchoolID" class="btn btn-danger btn-sm" 
                                   onclick="return confirm('Are you sure you want to delete this school?');">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
} 