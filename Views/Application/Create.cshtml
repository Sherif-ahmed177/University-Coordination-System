@using UniversityApplicationSystem.Models
@model UniversityApplicationSystem.Models.ViewModels.ApplicationViewModel

@{
    ViewData["Title"] = "Create Application";
}

<div class="container mt-4">
    <h2>Create Application</h2>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Application.StudentID" class="control-label">Student</label>
                    <select asp-for="Application.StudentID" class="form-select" required>
                        <option value="">-- Select Student --</option>
                        @if (Model.Students != null)
                        {
                            @foreach (var student in Model.Students)
                            {
                                <option value="@student.StudentID">@($"{student.FirstName} {student.LastName}")</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="Application.StudentID" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Application.MajorID" class="control-label">Major</label>
                    <select asp-for="Application.MajorID" class="form-select" required>
                        <option value="">-- Select Major --</option>
                        @if (Model.Majors != null)
                        {
                            @foreach (var major in Model.Majors)
                            {
                                <option value="@major.MajorID">@major.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="Application.MajorID" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Application.Status" class="control-label">Status</label>
                    <select asp-for="Application.Status" class="form-select" required>
                        <option value="Pending">Pending</option>
                        <option value="Approved">Approved</option>
                        <option value="Rejected">Rejected</option>
                        <option value="Waitlisted">Waitlisted</option>
                    </select>
                    <span asp-validation-for="Application.Status" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Application.Grade" class="control-label">Grade</label>
                    <input asp-for="Application.Grade" class="form-control" type="number" step="0.01" min="0" max="100" />
                    <span asp-validation-for="Application.Grade" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 