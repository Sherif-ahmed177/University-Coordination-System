@model IEnumerable<UniversityApplicationSystem.Models.ViewModels.ApplicationViewModel>

@{
    ViewData["Title"] = "Applications";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Applications</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Student</th>
                            <th>Major</th>
                            <th>School</th>
                            <th>Status</th>
                            <th>Grade</th>
                            <th>Application Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@($"{item.Application?.Student?.FirstName} {item.Application?.Student?.LastName}")</td>
                                <td>@item.Application?.Major?.Name</td>
                                <td>@item.Application?.Major?.School?.SchoolName</td>
                                <td>
                                    <span class="badge @(item.Application?.Status switch {
                                        "Approved" => "bg-success",
                                        "Rejected" => "bg-danger",
                                        "Waitlisted" => "bg-warning",
                                        _ => "bg-secondary"
                                    })">
                                        @item.Application?.Status
                                    </span>
                                </td>
                                <td>@item.Application?.Grade</td>
                                <td>@item.Application?.ApplicationDate.ToString("g")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Application?.ApplicationID" class="btn btn-info btn-sm">Details</a>
                                        <a asp-action="Edit" asp-route-id="@item.Application?.ApplicationID" class="btn btn-primary btn-sm">Edit</a>
                                        <form asp-action="Delete" asp-route-id="@item.Application?.ApplicationID" method="post" style="display: inline;">
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this application?');">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any JavaScript functionality here
        });
    </script>
} 