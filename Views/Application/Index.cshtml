@model IEnumerable<UniversityApplicationSystem.Models.Application>

@{
    ViewData["Title"] = "Applications";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Applications</h2>
        <a asp-action="Create" class="btn btn-primary">New Application</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Student</th>
                    <th>Major</th>
                    <th>Application Date</th>
                    <th>Status</th>
                    <th>Grade</th>
                    <th>Payment Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var application in Model)
                {
                    <tr>
                        <td>@($"{application.Student?.FirstName} {application.Student?.LastName}")</td>
                        <td>@application.Major?.Name</td>
                        <td>@application.ApplicationDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <span class="badge @(application.Status switch {
                                "Approved" => "bg-success",
                                "Rejected" => "bg-danger",
                                "Pending" => "bg-warning",
                                _ => "bg-secondary"
                            })">@application.Status</span>
                        </td>
                        <td>@(application.Grade?.ToString() ?? "-")</td>
                        <td>
                            <span class="badge @(application.Payment?.Status switch {
                                "Paid" => "bg-success",
                                "Pending" => "bg-warning",
                                "Failed" => "bg-danger",
                                _ => "bg-secondary"
                            })">@(application.Payment?.Status ?? "Not Paid")</span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@application.ApplicationID" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Edit" asp-route-id="@application.ApplicationID" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@application.ApplicationID" class="btn btn-danger btn-sm" 
                                   onclick="return confirm('Are you sure you want to delete this application?');">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any JavaScript functionality here
        });
    </script>
} 