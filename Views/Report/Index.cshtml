@model UniversityApplicationSystem.Models.ViewModels.ReportViewModel

@{
    ViewData["Title"] = "Generate Reports";
}

<div class="container mt-4">
    <h2>Generate Reports</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="GenerateReport" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="ReportType" class="control-label">Report Type</label>
                    <select asp-for="ReportType" class="form-select" asp-items="@(new SelectList(Model.ReportTypes))">
                        <option value="">-- Select Report Type --</option>
                    </select>
                    <span asp-validation-for="ReportType" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="StartDate" class="control-label">Start Date</label>
                    <input asp-for="StartDate" class="form-control" type="date" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EndDate" class="control-label">End Date</label>
                    <input asp-for="EndDate" class="form-control" type="date" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Generate Report</button>
                    <a asp-action="Index" class="btn btn-secondary">Reset</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}