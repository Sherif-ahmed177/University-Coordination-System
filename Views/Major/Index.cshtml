@model IEnumerable<UniversityApplicationSystem.Models.Major>

@{
    ViewData["Title"] = "Majors";
}

<div class="container-fluid">
    <h2>Majors</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>School</th>
                    <th>Description</th>
                    <th>Capacity</th>
                    <th>Duration (Years)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MajorID</td>
                        <td>@item.Name</td>
                        <td>@item.School?.SchoolName</td>
                        <td>@(item.Description?.Length > 50 ? item.Description.Substring(0, 47) + "..." : item.Description)</td>
                        <td>@item.Capacity</td>
                        <td>@item.DurationYears</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.MajorID" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.MajorID" class="btn btn-info btn-sm">Details</a>
                                <form asp-action="Delete" asp-route-id="@item.MajorID" method="post" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm" 
                                            onclick="return confirm('Are you sure you want to delete this major?');">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
} 